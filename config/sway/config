# Idle configuration
exec swayidle \
    timeout 285 'brightnessctl s 20%' \
    resume 'brightnessctl s 100%' \
    timeout 300 'swaymsg "output * dpms off"' \
    resume 'swaymsg "output * dpms on"' \
    timeout 600 'systemctl suspend' \
    before-sleep 'swaylock'

